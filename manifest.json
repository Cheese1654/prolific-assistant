{
  "manifest_version": 2,

  "name": "Prolific Assistant",
  "short_name": "PA",
  "version": "1.0.5",
  
  "permissions": [
    "tts",
    "storage",
    "notifications",
    "https://www.prolific.ac/*"
  ],

  "icons": {
    "16": "prolific.png",
    "128": "prolific.png"
  },
  
  "browser_action": {
    "default_icon": "prolific.png",
    "default_title": "Prolific Assistant",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  }
}
